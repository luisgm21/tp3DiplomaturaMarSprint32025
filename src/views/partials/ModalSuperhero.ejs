<div id="superheroModal" class="fixed inset-0 bg-black bg-opacity-50 flex items-center justify-center hidden">
    <div class="bg-white p-6 rounded-lg shadow-lg w-96">
        <h2 id="modalTitle" class="text-xl font-bold mb-4">Agregar Superhéroe</h2>
        
        <form id="superheroForm" method="POST">
            <input type="hidden" name="_method" id="methodField"> <!-- Campo oculto para el método -->
            <label class="block mb-2">Nombre Superhéroe:</label>
            <input type="text" id="nombreSuperHeroe" name="nombreSuperHeroe" class="w-full border p-2 rounded mb-3" required>

            <label class="block mb-2">Nombre Real:</label>
            <input type="text" id="nombreReal" name="nombreReal" class="w-full border p-2 rounded mb-3" required>

            <label class="block mb-2">Edad:</label>
            <input type="number" id="edad" name="edad" class="w-full border p-2 rounded mb-3" min="0">

            <label class="block mb-2">Planeta de Origen:</label>
            <input type="text" id="planetaOrigen" name="planetaOrigen" class="w-full border p-2 rounded mb-3">

            <label class="block mb-2">Debilidad:</label>
            <input type="text" id="debilidad" name="debilidad" class="w-full border p-2 rounded mb-3">

            <label class="block mb-2">Poderes (separados por comas):</label>
            <input type="text" id="poderes" name="poderes" class="w-full border p-2 rounded mb-3">

            <label class="block mb-2">Aliados (separados por comas):</label>
            <input type="text" id="aliados" name="aliados" class="w-full border p-2 rounded mb-3">

            <label class="block mb-2">Enemigos (separados por comas):</label>
            <input type="text" id="enemigos" name="enemigos" class="w-full border p-2 rounded mb-3">

            <div class="flex justify-end">
                <button type="button" id="closeModal" class="mr-2 px-4 py-2 border rounded">Cancelar</button>
                <button type="submit" class="bg-green-500 text-white px-4 py-2 rounded">Guardar</button>
            </div>
        </form>
    </div>
</div>